<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEDIA PLAYER"
        android:textSize="36sp"
        android:textColor="#5E64F2"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Music Icon with Circle Background -->
    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        >

        <!-- Outer Circle -->
        <View
            android:id="@+id/outerCircle"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:background="@drawable/circle_outer" />

        <!-- Middle Circle -->
        <View
            android:id="@+id/middleCircle"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_middle" />

        <!-- Inner Circle with Music Icon -->
        <FrameLayout
            android:id="@+id/innerCircle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_inner">

            <!-- Music Note Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_music_note"
                android:contentDescription="Music Icon" />

        </FrameLayout>


    </FrameLayout>

    <LinearLayout
        android:id="@+id/soundVisualizer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <View
            android:id="@+id/bar1"
            android:layout_width="8dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="3dp"
            android:background="#5E64F2" />

        <View
            android:id="@+id/bar2"
            android:layout_width="8dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="#5E64F2" />

        <View
            android:id="@+id/bar3"
            android:layout_width="8dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="3dp"
            android:background="#5E64F2" />

        <View
            android:id="@+id/bar4"
            android:layout_width="8dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="3dp"
            android:background="#5E64F2" />

        <View
            android:id="@+id/bar5"
            android:layout_width="8dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="3dp"
            android:background="#5E64F2" />
    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Stop Button -->
        <Button
            android:id="@+id/btnStop"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="STOP"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_red"
            android:layout_marginEnd="8dp"
            android:paddingVertical="16dp" />

        <!-- Play Button -->
        <Button
            android:id="@+id/btnPlay"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_red"
            android:layout_marginEnd="8dp"
            android:paddingVertical="16dp" />

        <!-- Pause Button -->
        <Button
            android:id="@+id/btnPause"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="PAUSE"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_red"
            android:paddingVertical="16dp" />

    </LinearLayout>

</LinearLayout>